<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>SocialMessaging</display-name>
	<context-param>
		<param-name>DB_URL</param-name>
		<param-value>jdbc:mysql://localhost:3306/sma</param-value>
	</context-param>
	<context-param>
		<param-name>DB_DRIVER</param-name>
		<param-value>com.mysql.jdbc.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>DB_USER</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>DB_PASSWORD</param-name>
		<param-value>root</param-value>
	</context-param>
	<servlet>
		<display-name>UserAuthentication</display-name>
		<servlet-name>UserAuthentication</servlet-name>
		<servlet-class>in.social.messaging.controller.AuthenticationServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>UserAuthorization</display-name>
		<servlet-name>UserAuthorization</servlet-name>
		<servlet-class>in.social.messaging.controller.AuthorizationServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>New Mail</display-name>
		<servlet-name>NewMail</servlet-name>
		<servlet-class>in.social.messaging.controller.NewMailServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>FetchMail</display-name>
		<servlet-name>FetchMail</servlet-name>
		<servlet-class>in.social.messaging.controller.FetchMailsServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>ChangeMail</display-name>
		<servlet-name>ChangeMail</servlet-name>
		<servlet-class>in.social.messaging.controller.ChangeMailServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>RemoveMail</display-name>
		<servlet-name>RemoveMail</servlet-name>
		<servlet-class>in.social.messaging.controller.RemoveMailServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>FindMails</display-name>
		<servlet-name>FindMails</servlet-name>
		<servlet-class>in.social.messaging.controller.FindMailsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NewMail</servlet-name>
		<url-pattern>/NewMail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserAuthentication</servlet-name>
		<url-pattern>/UserAuthentication</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserAuthorization</servlet-name>
		<url-pattern>/UserAuthorization</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewMail</servlet-name>
		<url-pattern>/NewMail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FetchMail</servlet-name>
		<url-pattern>/FetchMail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ChangeMail</servlet-name>
		<url-pattern>/ChangeMail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RemoveMail</servlet-name>
		<url-pattern>/RemoveMail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FindMails</servlet-name>
		<url-pattern>/FindMails</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<description></description>
		<display-name>DBCServlet</display-name>
		<servlet-name>DBCServlet</servlet-name>
		<servlet-class>in.social.messaging.controller.DBCServlet</servlet-class>
		  <load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>DBCServlet</servlet-name>
		<url-pattern>/DBCServlet</url-pattern>
	</servlet-mapping>
</web-app>